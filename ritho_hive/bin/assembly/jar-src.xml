<?xml version="1.0" encoding="UTF-8"?>

<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>dist</id>
  <formats>
    <!--<format>tar.gz</format>-->
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${basedir}</directory>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>NOTICE*</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${basedir}/src/resources/lucene_solr_synonyms</source>
      <outputDirectory>resources</outputDirectory>
      <filtered>false</filtered>
    </file>    
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>com.ritho.hadoop:ritho_hive</include>
        <include>org.apache.lucene:lucene-core</include>
        <include>org.apache.lucene:lucene-codecs</include>
        <include>org.apache.lucene:lucene-expressions</include>
        <include>org.apache.lucene:lucene-facet</include>
        <include>org.apache.lucene:lucene-grouping</include>
        <include>org.apache.lucene:lucene-queries</include>
        <include>org.apache.lucene:lucene-queryparser</include>
        <include>org.apache.lucene:lucene-suggest</include>
        <include>org.apache.lucene:lucene-analyzers-common</include>
      </includes>
      <fileMode>0744</fileMode>
      <unpack>true</unpack>
    </dependencySet>

  </dependencySets>
</assembly>
